<!DOCTYPE html>
<html>
<head>
  <title>BlogSunday</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <div>
        <% if current_user %>
        Signed in as <%= current_user.name %> | <%= link_to 'Logout', '/logout', method: :delete %>
        <% else %>
        <%= link_to 'Login', '/login' %> | <%= link_to 'Sign up Now', signup_path, class: "btn btn-lg btn-primary" %>
        <% end %>
      </div>
      <div class="container">
      <%= yield %>
      </div>
        <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
